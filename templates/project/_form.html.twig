<div class="bg-blue-200 w-full form-box h-screen">
    {{ form_start(form) }}
        <div class="w-[50%] mb-4">{{ form_row(form.product_owner) }}</div>
        <div class="w-[50%] mb-4">{{ form_row(form.name) }}</div>
        <div class="w-[50%] my-4">{{ form_row(form.description) }}</div>
        <div class="w-[50%] my-4">{{ form_row(form.agency) }}</div>
        <div class="w-[50%] my-4">{{ form_row(form.techStack) }}</div>
        <div class="w-[50%] my-4">{{ form_row(form.domain) }}</div>
        <div class="w-[50%] my-4">{{ form_row(form.progress) }}</div>
        <button class="w-40 py-2 px-4 bg-blue-500 text-white font-semibold
                       rounded-lg shadow-md hover:bg-blue-700 focus:outline-none focus:ring-2
                     focus:ring-blue-400 focus:ring-opacity-75 mb-4">{{ button_label|default('Save') }}</button>

        <a href="/app" class="w-40 py-2 px-4 bg-blue-500 text-white font-semibold rounded-lg shadow-md
        hover:bg-blue-700 focus:outline-none focus:ring-2
        focus:ring-blue-400 focus:ring-opacity-75 text-center">back to list</a>
    {{ form_end(form) }}
</div>

